@model UI.Models.SearchViewModel
@{
    ViewBag.Title = "饰我心意-搜索";
}
@section style
{
    <link href="~/Content/css/PostDetails.css" rel="stylesheet" />
    <link href="~/Content/css/LunTan.css" rel="stylesheet" />
    <style>
        .choose {
            text-decoration: none;
            color: #515151;
            line-height: 44px;
            display: block;
            color: #333333;
            margin-left: 12px;
        }

            .choose:hover {
                color: #c03f3c;
                transition: color 0.2s linear;
                -webkit-transition: color 0.2s linear;
                -moz-transition: color 0.2s linear;
            }

        .zan, .cai, .pl {
            float: right;
            margin-left: 20px;
            cursor: pointer;
        }

        .pl1 {
            color: #333;
        }

            .cai1:hover, .zan1:hover, .pl1:hover {
                color: #c03f3c;
                transition: color 0.2s linear;
                -webkit-transition: color 0.2s linear;
                -moz-transition: color 0.2s linear;
            }

        .nowarea {
            border-left: 3px solid #dd3b44;
            line-height: 40px;
            padding-left: 15px;
            font-size: 16px;
        }

        .rightbox2 {
            width: 28% !important;
            position: absolute;
            right: 40px;
            top: 290px !important;
            background-color: #fff;
        }

        .choosed {
            color: white;
            cursor: pointer;
            display: block;
            width: 110px;
            height: 35px;
            text-align: center;
            line-height: 35px;
        }

        .ltitle {
            font-size: 17px;
            margin: 10px 0;
            text-decoration: none;
            color: black;
            cursor: pointer;
        }

            .ltitle:hover {
                color: #c03f3c;
            }
    </style>
}
<section style="width: 85%; margin: 30px auto; padding-bottom: 180px;">
    <div class="leftbox" style="width: 67%;">
        <div class="leftbox1">
            <div class="leftbox_1" style="width: 750px;">
                <div class="postdetail">
                    <div id="ltvpostdetail">
                        <div class="nowarea">
                            <h3>搜索"@Session["Search"]"的结果</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @foreach (var item in Model.Goods1)
                {
                    <div class="leftbox_1 lgood" style="width: 750px;">
                        <a href="@Url.Action("GoodsDetail", "Mall", new {Goods_id = item.Goods_id})">
                            <div class="ltitle"><span style="color:rgba(1,1,1,0.5); margin: 0 10px;">[商城]</span>@item.GoodsName&nbsp;&nbsp;&nbsp;<span style="color: rgba(211, 59, 68, 1);">¥  @item.Price</span></div>
                            <div style="color:rgba(1,1,1,0.7); margin: 10px 0;margin-left: 30px;">@item.GoodsJianjie</div>
                            <img style="width: 150px; height: 150px; margin: 10px 0;margin-left: 20px;" src='..@item.GoodsImage' />
                        </a>
                    </div>
                }
                @foreach (var item in Model.UserInfo1)
                {
                    <div class="leftbox_1 luserinfo" style="width: 750px;">
                        <a href="@Url.Action("UserCenter", "Userinfo", new {Users_id = @item.Users_id})">
                            <img style="width: 75px; height: 75px; border-radius: 40px; display: inline-block; float: left; overflow: hidden;" src='..@item.UserImage' />
                            <div class="ltitle"><span style="color: rgba(1, 1, 1, 0.5); margin: 0 10px;">[用户]</span>@item.UserName</div>
                            <div style="margin: 20px 0;color:rgba(1,1,1,0.7); text-decoration: none;margin-left: 88px;">@item.UserSign</div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="rightbox" style="width: 28%; height: auto; display: block; background-color: #fff; box-shadow: 0 0 4px #cecccc; -webkit-box-shadow: 0 0 4px #cecccc;">
        <div class="tuijian" style="margin: 20px auto; overflow: hidden; border-top: 3px solid #e2d537;">
            <span style="width: 100%; display: block; font-size: 17px; text-align: center; margin-top: 10px; font-size: 17px; color: #333; font-weight: 700; padding-bottom: 5px;">筛选</span>
            <div id="ltvtuijian">
                <div style="width: 100%;">
                    <div class="choosed c3" style="width: 250px; margin: 15px auto;background-color:rgba(211, 59, 68,0.8); color: black; ">全部</div>
                    <div style="width: 250px; margin: 15px auto;">
                        <div class="choosed c1" style="display: inline-block;margin-left: 25px; background-color: rgba(121,61,86,0.8);">商品</div>
                        <div class="choosed c2" style="display: inline-block;margin-left: 25px; background-color: rgba(84,107,131,0.8);">用户</div>
                    </div>                    
                </div>
</section>
